{
  "manifest_version": 3,
  "name": "HelpMeOut",
  "description": "It records the user's screen",
  "icons": {
    "128": "./images/logo.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "./images/logo.png",
      "32": "./images/logo.png",
      "128": "./images/logo.png"
    }
  },

  "host_permissions": ["http://*/", "https://*/*"],

  "permissions": ["scripting", "tabs", "activeTab"],
  "version": "1.0.0"
}
